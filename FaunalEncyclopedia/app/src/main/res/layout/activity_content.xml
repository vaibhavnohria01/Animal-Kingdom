<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentActivity">

    <TextView
        android:id="@+id/taxonomicGroup"
        android:layout_width="337dp"
        android:layout_height="33dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taxonomicSubgroup"
        android:layout_width="337dp"
        android:layout_height="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="29dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taxonomicGroup" />

    <TextView
        android:id="@+id/scientificName"
        android:layout_width="333dp"
        android:layout_height="34dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taxonomicSubgroup" />

    <TextView
        android:id="@+id/commonName"
        android:layout_width="337dp"
        android:layout_height="31dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scientificName" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="30dp" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="337dp"
        android:layout_height="304dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="41dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commonName" />

</androidx.constraintlayout.widget.ConstraintLayout>